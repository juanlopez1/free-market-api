{
    "compilerOptions": {
        "target": "es2016",
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@free-market-api/*": ["./src/*"]
        },
        "allowJs": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
